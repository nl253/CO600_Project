  <script>toggleTabCreatedModules();</script>
{{else}}
  {{#if tab.personalDetails}}
    <script>toggleTabPersonalDetails();</script>
  {{else}}
    {{#if tab.enrollments}}
      <script>toggleTabEnrollments();</script>
    {{/if}}
  {{/if}}
{{/if}}
