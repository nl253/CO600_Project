<section class="hero is-primary is-bold">
  <div class="hero-head">
    <br>
    <div class="container">
      <h1 class="title is-1">
        <i class="fas fa-user"></i>
        {{#if loggedIn.firstName}}
          <span>{{loggedIn.firstName}}</span>
        {{else}}
          <span class="greeting-email">{{loggedIn.email}}</span>
        {{/if}}
      </h1>
    </div>
  </div>
  <div class="tabs is-centered is-boxed is-medium">
    <ul>
      <li class="is-active">
        <a id="btn-enrollments-tab">
          <span class="icon is-small"><i class="far fa-file-alt" aria-hidden="true"></i></span>
          <span>Enrollments</span>
        </a>
      </li>
      <li>
        <a id="btn-created-modules-tab">
          <span class="icon is-small"><i class="fas fa-image" aria-hidden="true"></i></span>
          <span>Created Modules</span>
        </a>
      </li>
    </ul>
  </div>
</section>

<section id="modules-created" style="margin: 70px 25vw; display: none;"></section>

<section id="enrollments" style="margin: 70px 25vw;">
  {{#if loggedIn.enrollments}}
    <ul class="list" style="width: 100%;">
      {{#each loggedIn.enrollments}}
        <li class="list-item">
          <a href="/module/{{module}}" class="has-text-link">
            {{module}}
          </a>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</section>

<script>
  (function() {
    document.getElementById('btn-created-modules-tab').onclick = function(event) {
      event.preventDefault();
      document.getElementById('modules-created').style.display = 'block';
      document.getElementById('enrollments').style.display = 'none';
      document.getElementById('btn-created-modules-tab').parentElement.classList.add('is-active');
      document.getElementById('btn-enrollments-tab').parentElement.classList.remove('is-active');
    };
    document.getElementById('btn-enrollments-tab').onclick = function(event) {
      event.preventDefault();
      document.getElementById('modules-created').style.display = 'none';
      document.getElementById('enrollments').style.display = 'block';
      document.getElementById('btn-created-modules-tab').parentElement.classList.remove('is-active');
      document.getElementById('btn-enrollments-tab').parentElement.classList.add('is-active');
    };
  })();
</script>

