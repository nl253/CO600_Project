<div class="has-background-white columns is-multiline" style="margin: 30px auto auto auto;">
  <div class="column is-3-fullhd is-3-desktop is-12-tablet is-12-mobile"></div>
  <div class="column is-6-fullhd is-6-desktop is-12-tablet is-12-mobile">
    <h1 class="title has-text-centered is-1" style="margin-top: 10px;">Enrollments</h1>
  </div>
  <div class="column is-3-fullhd is-3-desktop is-12-tablet is-12-mobile"></div>
</div>

<!--3-column layout: list, list, editing -->
<div class="columns is-centered is-multiline" style="margin-top: 30px;">

  <div class="column is-narrow-desktop is-2-desktop is-5-tablet is-11-mobile"
       style="display: flex; flex-direction: column; justify-content: flex-start; align-items: stretch; margin: 20px auto;">

    <h2 class="title has-text-centered" style="margin-bottom: 10px;">
      Modules
    </h2>

    <p id="module-edit-spinner-list-module" class="has-text-centered is-invisible" style="margin: 0 auto;">
      <span style="margin-bottom: 15px;">Loading</span>
      <br>
      <i class="fas fa-spinner spinner"></i>
    </p>

    <!--list of modules-->
    <ul id="module-edit-list-module" class="menu-list"></ul>

  </div>

  <div class="column is-narrow-desktop is-2-desktop is-5-tablet is-11-mobile" style="margin: 20px auto;">

    <h2 class="title has-text-centered" style="margin-bottom: 20px;">
      Lessons
    </h2>

    <p id="module-edit-spinner-list-lesson" class="has-text-centered is-invisible" style="margin: 0 auto;">
      <span style="margin-bottom: 15px;">Loading</span>
      <br>
      <i class="fas fa-spinner spinner"></i>
    </p>

    <!--list of lessons-->
    <ol id="module-edit-list-lesson" class="menu-list" style="list-style-type: none;">
      <li><p class="has-text-centered">Click on a module.</p></li>
    </ol>

    <br>

    <h2 class="title has-text-centered" style="margin: 35px 0 20px;">
      Quiz
    </h2>

    <p id="module-edit-spinner-list-question" class="has-text-centered is-invisible" style="margin: 0 auto;">
      <span style="margin-bottom: 15px;">Loading</span>
      <br>
      <i class="fas fa-spinner spinner"></i>
    </p>

    <!--quiz edit (list of questions)-->
    <ol id="module-edit-list-question" style="list-style-type: none;">
      <li><p class="has-text-centered">Click on a module.</p></li>
    </ol>

  </div>

  <!--right side of the screen-->
  <!--only one of the divs inside can be visible-->
  <div id="module-edit-pane" class="column is-7-desktop is-10-tablet is-11-mobile" style="margin: 20px auto; max-width: 80%;">
    <p class="has-text-centered" style="margin-top: 50px;">Click on a lesson or a module.</p>
  </div>
</div>

<script async src="/javascripts/module/learn.js"></script>
