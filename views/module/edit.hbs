<div class="has-background-white columns is-multiline" style="margin: 30px auto auto auto;">
  <div class="column is-3-fullhd is-3-desktop is-2-tablet is-12-mobile">
    <a href="/user/home" class="button is-light has-text-centered is-block" style="max-width: 200px; margin: auto !important;">
      <i class="fas fa-arrow-left"></i>
      <span class="has-text-centered">Home</span>
    </a>
  </div>
  <div class="column is-6-fullhd is-6-desktop is-8-tablet is-12-mobile">
    <h1 class="title has-text-centered is-1" style="margin-top: 10px;">Modify</h1>
  </div>
  <div class="column is-3-fullhd is-3-desktop is-2-tablet is-12-mobile"></div>
</div>

<!--3-column layout: list, list, editing -->
<div class="columns is-centered is-multiline" style="margin-top: 30px;">

  <div class="column is-narrow-desktop is-2-desktop is-5-tablet is-11-mobile"
       style="margin-left: 30px; display: flex; flex-direction: column; justify-content: flex-start; align-items: stretch;">

    <h2 class="title has-text-centered" style="margin-bottom: 10px;">
      Modules
    </h2>
    <!--list of modules-->
    <ul id="module-edit-list-module" class="menu-list" style="margin-top: 20px; margin-bottom: 20px;"></ul>
    <button id="module-edit-btn-module-create" class="button is-link has-text-white" style="display: block; max-width: 150px; margin: 0 auto;">
      <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
      Module
    </button>
  </div>

  <div class="column is-narrow-desktop is-2-desktop is-5-tablet is-11-mobile" style="margin-left: 30px;">

    <h2 class="title has-text-centered" style="margin-bottom: 20px;">
      Lessons
    </h2>

    <!--list of lessons-->
    <ol id="module-edit-list-lesson" class="menu-list" style="margin-bottom: 20px; list-style-type: none;"></ol>

    <!--create lesson btn-->
    <button id="module-edit-btn-lesson-create"
            class="button is-link has-text-white" style="margin: 0 auto; display: block; max-width: 150px;">
      <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
      Lesson
    </button>

    <br>

    <h2 class="title has-text-centered" style="margin: 35px 0 20px;">
      Quiz
    </h2>

    <!--quiz edit (list of questions)-->
    <ol id="module-edit-list-question" style="list-style-type: none;"></ol>

    <!--add question btn-->
    <button id="module-edit-btn-question-create" class="button is-link has-text-white"
            style="margin: 10px auto 0; display: block; max-width: 150px;">
      <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
      Question
    </button>
  </div>

  <!--right side of the screen-->
  <!--only one of the divs inside can be visible-->
  <div id="module-edit-pane" class="column is-7-desktop is-10-tablet is-11-mobile"></div>
</div>

<script async src="/javascripts/module/edit.js"></script>
