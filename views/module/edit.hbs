<div class="has-background-white columns is-multiline" style="margin: 30px auto auto auto;">
  <div class="column is-3-fullhd is-3-desktop is-2-tablet is-12-mobile">
    <a href="/user/home"
       class="button is-light has-text-centered is-block"
       style="max-width: 100px; margin: auto !important;">
      <i class="fas fa-arrow-left" style="position: relative; top: 3px;"></i>
      <span class="has-text-centered">Home</span>
    </a>
  </div>
  <div class="column is-6-fullhd is-6-desktop is-8-tablet is-12-mobile">
    <h1 class="title has-text-centered is-1" style="margin-top: 10px;">Modify</h1>
  </div>
  <div class="column is-3-fullhd is-3-desktop is-2-tablet is-12-mobile"></div>
</div>

<!--3-column layout: list, list, editing -->
<div class="columns is-multiline container-fluid" style="margin: 30px 50px;">
  <div class="columns container is-multiline column is-two-fifths-fullhd is-two-fifths-desktop is-full-tablet is-full-mobile is-marginless">
    <div class="column is-half-fullhd is-half-desktop is-half-tablet is-full-mobile"
         style="display: flex; flex-direction: column; justify-content: flex-start; align-items: stretch;">

      <h2 class="title has-text-centered" style="margin-bottom: 10px;">
        Modules
      </h2>

      <p id="module-edit-spinner-list-module" class="has-text-centered is-hidden" style="margin: 20px auto;">
        <span style="margin-bottom: 15px;">Loading</span>
        <br>
        <i class="fas fa-spinner spinner"></i>
      </p>

      <!--list of modules-->
      <ul id="module-edit-list-module" class="menu-list" style="margin-top: 20px"></ul>
      <button id="module-edit-btn-module-create"
              class="button is-link has-text-white"
              style="display: block; max-width: 150px; margin: 10px auto;">
        <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
        Module
      </button>
    </div>
    <div class="column is-half-fullhd is-half-desktop is-half-tablet is-full-mobile">

      <h2 class="title has-text-centered" style="margin-bottom: 20px; margin-top: 20px;">
        Lessons
      </h2>

      <p id="module-edit-spinner-list-lesson" class="has-text-centered is-hidden" style="margin: 20px auto;">
        <span style="margin-bottom: 15px;">Loading</span>
        <br>
        <i class="fas fa-spinner spinner"></i>
      </p>

      <!--list of lessons-->
      <ol id="module-edit-list-lesson" class="menu-list" style="margin-bottom: 20px; list-style-type: none;">
        <li><p class="has-text-centered">Click on a module.</p></li>
      </ol>

      <!--create lesson btn-->
      <button id="module-edit-btn-lesson-create"
              class="button is-link has-text-white"
              style="margin: 0 auto; display: block; max-width: 150px;">
        <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
        Lesson
      </button>

      <br>

      <h2 class="title has-text-centered" style="margin: 35px 0 20px;">
        <span>Quiz</span>
      </h2>

      <p id="module-edit-spinner-list-question" class="has-text-centered is-hidden" style="margin: 20px auto;">
        <span style="margin-bottom: 15px;">Loading</span>
        <br>
        <i class="fas fa-spinner spinner"></i>
      </p>

      <!--quiz edit (list of questions)-->
      <ol id="module-edit-list-question" class="menu-list" style="list-style-type: none;">
        <li><p class="has-text-centered">Click on a module.</p></li>
      </ol>

      <!--add question btn-->
      <button id="module-edit-btn-question-create"
              class="button is-link has-text-white"
              style="margin: 10px auto 0; display: block; max-width: 150px;">
        <i class="fas fa-plus" style="position: relative; top: 3px;"></i>
        Question
      </button>
    </div>
  </div>
  <!--right side of the screen-->
  <!--only one of the divs inside can be visible-->
  <div id="module-edit-pane" class="column is-three-fifths-fullhd is-three-fifths-desktop is-full-tablet is-full-mobile container">
    <p class="has-text-centered" style="margin-top: 50px;">Click on a lesson or a module.</p>
  </div>
</div>

<script async src="/javascripts/module/edit.js"></script>
