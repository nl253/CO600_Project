{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true,
    "shared-node-browser": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:security/recommended",
    "plugin:promise/recommended",
    "google"
  ],
  "globals": {
    "Array": true,
    "Date": true,
    "JSON": true,
    "Map": true,
    "Math": true,
    "Number": true,
    "Object": true,
    "Promise": true,
    "Set": true,
    "URL": true,
    "document": true,
    "module": true,
    "navigator": true,
    "process": true,
    "window": true
  },
  "parserOptions": {
    "codeFrame": false,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": false
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": [
    "filenames",
    "promise",
    "compat",
    "security"
  ],
  "rules": {
    "accessor-pairs": [
      2,
      {
        "getWithoutSet": true
      }
    ],
    "arrow-spacing": [
      1,
      {
        "after": true,
        "before": true
      }
    ],
    "block-scoped-var": 1,
    "default-case": 1,
    "dot-location": [
      2,
      "property"
    ],
    "dot-notation": 1,
    "func-name-matching": 1,
    "func-names": [
      1,
      "as-needed"
    ],
    "max-nested-callbacks": [
      1,
      3
    ],
    "max-params": [
      1,
      5
    ],
    "max-statements-per-line": 1,
    "no-duplicate-case": 2,
    "no-duplicate-imports": 2,
    "no-extra-parens": [
      2,
      "functions"
    ],
    "no-implicit-coercion": 1,
    "no-implied-eval": 2,
    "no-loop-func": 2,
    "no-magic-numbers": [
      1,
      {
        "ignore": [
          0,
          1,
          2,
          -1,
          -2,
          10,
          100
        ],
        "ignoreArrayIndexes": true
      }
    ],
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-nested-ternary": 1,
    "no-param-reassign": 2,
    "no-unsafe-negation": 2,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTaggedTemplates": true,
        "allowTernary": true
      }
    ],
    "no-unused-vars": [
      2,
      {
        "args": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "no-useless-call": 2,
    "no-useless-computed-key": 2,
    "no-useless-concat": 1,
    "no-useless-escape": 2,
    "no-useless-rename": 2,
    "no-useless-return": 2,
    "no-void": 2,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "prefer-destructuring": 1,
    "prefer-numeric-literals": 1,
    "prefer-rest-params": 1,
    "prefer-template": 1,
    "sort-imports": 1,
    "vars-on-top": 1,
    "yoda": [
      2,
      "never"
    ]
  }
}
